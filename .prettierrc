{
 "useTabs": false,
 "singleQuote": true,
 "trailingComma": "none",
 "printWidth": 100,
 "plugins": ["prettier-plugin-svelte"],
 "overrides": [
  {
   "files": "*.svelte",
   "options": {
    "parser": "svelte",
    "trailingComma": "none",
    "svelteStrictMode": false,
    "svelteBracketNewLine": false,
    "svelteAllowShorthand": true,
    "svelteIndentScriptAndStyle": true
   }
  }
 ],
 "tabWidth": 1
}
